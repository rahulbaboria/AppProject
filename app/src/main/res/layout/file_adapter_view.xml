<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_first">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/card_title">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/file_heading"
    android:weightSum="10"

    android:background="@color/colorAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PTU Syllabus"
        android:id="@+id/txt_file_heading"
        android:minHeight="35dp"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"

        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

    <ImageView

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center"

        android:src="@drawable/newbtn"
        android:maxHeight="40dp"
        android:id="@+id/img_new"
        />

</LinearLayout>

            <TextView
                android:layout_below="@+id/file_heading"
                android:id="@+id/txt_file_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Syllabus for CSE"
                android:textColor="@android:color/black"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/button_file_view"
                android:layout_width="80dp"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_height="30dp"
                android:drawableRight="@drawable/download"

                android:textColor="@android:color/white"
                android:background="@drawable/rounded_btn"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:text="View"

                />
             <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/txt_file_ref"
                 android:visibility="gone"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:id="@+id/txt_new_ref"
                android:visibility="gone"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>




</LinearLayout>
